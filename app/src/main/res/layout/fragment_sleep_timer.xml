<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/settingRecycler">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSleepTimer"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:background="@color/toolbarBack"
            android:minHeight="?attr/actionBarSize"
            android:text=""
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:titleTextColor="@color/colorNav"
            app:title="@string/slep_timer_title" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarSleepTimer"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/btn5Min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/ic_fivemin"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/btn10Min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/ic_tenmin"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/btn15Min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/ic_fifteenmin"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/btn30Min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/ic_thirtymin"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/btn45Min"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/ic_fourtyfivemin"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/btn1Hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/ic_onehour"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/btnEndOfTrack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/ic_endoftrack"
                    android:visibility="gone"
                    tools:ignore="SpeakableTextPresentCheck" />

                <ImageView
                    android:id="@+id/btnEndOfPlaylist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:src="@drawable/ic_endofplaylist"
                    android:visibility="gone"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>