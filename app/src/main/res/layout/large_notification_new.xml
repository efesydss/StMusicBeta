<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_big"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="9dp"
        android:layout_marginRight="25dp"
        android:background="@color/black"
        android:src="@drawable/btn2white" />

    <ImageView
        android:id="@+id/btnNextLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="158dp"
        android:layout_marginTop="56dp"
        android:color="@color/white"
        android:src="@drawable/ic_skipnextnot" />

    <ImageView
        android:id="@+id/btnCloseLarge"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="64dp"
        android:layout_toEndOf="@+id/btnRepeatLarge"
        android:color="@color/white"
        android:src="@drawable/ic_close" />

    <ImageView
        android:id="@+id/btnRepeatLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="199dp"
        android:layout_marginTop="64dp"
        android:color="@color/white"
        android:src="@drawable/ic_repeat" />

    <ImageView
        android:id="@+id/btnPreviousLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="79dp"
        android:layout_marginTop="57dp"
        android:color="@color/white"
        android:src="@drawable/ic_skippreviousnot" />

    <ImageView
        android:id="@+id/btnShuffleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="64dp"
        android:color="@color/white"
        android:src="@drawable/ic_shufflenot" />

    <ImageView
        android:id="@+id/btnPlayLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="56dp"
        android:color="@color/white"
        android:src="@drawable/ic_play" />

    <TextView
        android:id="@+id/txtArtistNameLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/chivo"
        android:text="Duman"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtSongNameLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="38dp"
        android:fontFamily="@font/chivo_light"
        android:text="En Güzel Günüm Gecem"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/progressLarge"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPreviousLarge"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="15dp"
        android:progress="50"
        android:progressDrawable="@drawable/custom_seekbar"
        android:scrollbarThumbHorizontal="@drawable/thumb" />


</RelativeLayout>