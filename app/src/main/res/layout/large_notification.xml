<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_big"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imgPictureLarge"
        android:layout_width="103dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:layout_marginRight="25dp"
        android:background="@color/black"
        android:clickable="true"
        android:src="@drawable/btn2white"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/btnPlayLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="210dp"
        android:layout_marginTop="59dp"
        android:clickable="true"
        android:color="@color/white"
        android:src="@drawable/ic_play"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/btnNextLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="253dp"
        android:layout_marginTop="59dp"
        android:clickable="true"
        android:color="@color/white"
        android:src="@drawable/ic_skipnextnot"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/btnPreviousLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="165dp"
        android:layout_marginTop="59dp"
        android:clickable="true"
        android:color="@color/white"
        android:src="@drawable/ic_skippreviousnot" />

    <ImageView
        android:id="@+id/btnShuffleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="64dp"
        android:clickable="true"
        android:color="@color/white"
        android:src="@drawable/ic_shufflenot"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/btnRepeatLarge"
        android:layout_width="26dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="302dp"
        android:layout_marginTop="64dp"
        android:clickable="true"
        android:color="@color/white"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_repeat"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/btnCloseLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="44dp"
        android:layout_toEndOf="@+id/btnRepeatLarge"
        android:clickable="true"
        android:color="@color/white"
        android:src="@drawable/ic_close"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/txtArtistNameLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/chivo"
        android:text="Duman"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txtSongNameLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="138dp"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/chivo_light"
        android:text="En Güzel Günüm Gecem"
        android:textColor="@color/white" />

    <ProgressBar
        android:id="@+id/progressLarge"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnPreviousLarge"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:layout_marginRight="15dp"
        android:progress="50"
        android:progressDrawable="@drawable/custom_seekbar"
        android:scrollbarThumbHorizontal="@drawable/thumb" />


</RelativeLayout>