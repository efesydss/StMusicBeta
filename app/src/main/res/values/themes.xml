<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stmusic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>


        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>


        <item name="colorOnSecondary">@color/black</item>
        <item name="windowNoTitle">true</item>

        <item name="windowActionBar">false</item>
        <!--suppress AndroidDomInspection -->
        <item name="endIconDrawable">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Stmusic.MyToolBarStyle">
        <item name="logo">@drawable/ic_toolbarlogolight</item>
        <item name="android:background">@color/toolbarBack</item>
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="Theme.Stmusic.MyTablayoutTheme">
        <item name="tabBackground">@color/toolbarBack</item>
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="Theme.Stmusic.FragmentPlaylistConstraintTheme">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.Stmusic.BackNavigation">
        <item name="srcCompat">@drawable/ic_baseline_arrow_back_24</item>
    </style>
    <style name="Theme.Stmusic.PlaylistMotionTheme">
        <item name="android:background">@drawable/ic_backround_light</item>
    </style>

    <style name="Theme.Stmusic.PlaylistCardTheme">
        <item name="cardBackgroundColor">@color/lightRecycler</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Theme.Stmusic.PlaylistCardConstraint">
        <item name="android:background">@color/lightRecycler</item>
    </style>

    <style name="Theme.Stmusic.MenuDrawable">
        <item name="color">@color/black</item>
    </style>

    <style name="Theme.Stmusic.PlaylistArtistTheme">
        <item name="android:background">@color/white</item>

    </style>

    <style name="Theme.Stmusic.PlaylistArtistConstraintTheme">
        <item name="android:background">@drawable/ic_backround_light</item>
    </style>
    <style name="Theme.Stmusic.SettingsToolBarStyle">
        <item name="android:background">@color/colorNav</item>

    </style>

    <style name="Theme.Stmusic.PlaylistArtistRecyclerTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>


    <style name="Theme.Stmusic.AlertCreateConstraint">
        <item name="android:background">@color/white</item>
    </style>
    <style name="Theme.Stmusic.AlertCreateRecycler">
        <item name="android:background">@drawable/ic_createplaylistalertbackroundlight</item>

    </style>
    <style name="Theme.Stmusic.AlertCreateButton">
        <item name="android:src">@drawable/btnyeslight</item>

    </style>



    <style name="Theme.Stmusic.CardBackgroundColor">
        <item name="cardBackgroundColor">@color/lightRecycler</item>
    </style>

    <style name="Theme.Stmusic.BackgroundTint">
        <item name="android:backgroundTint">@color/lightRecycler</item>
    </style>


    <style name="Theme.Stmusic.PlaylistCardMoreVert">
        <item name="srcCompat">@drawable/ic_menu_light</item>
    </style>
    <style name="Theme.Stmusic.Like">
        <item name="srcCompat">@drawable/favorite_1_dark</item>
    </style>
    <style name="MY.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/colorBack</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:radius">52dp</item>
    </style>

    <style name="Theme.Stmusic.tabText">
        <item name="fontFamily">Chivo</item>
        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>

    <style name="Theme.Stmusic.CustomTextLight">
        <item name="android:textColor">@color/black</item>
    </style>

</resources>