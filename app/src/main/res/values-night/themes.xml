<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stmusic" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="windowActionBar">false</item>


        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Stmusic.MyToolBarStyle">
        <item name="logo">@drawable/ic_logo</item>

    </style>
    <style name="Theme.Stmusic.SettingsToolBarStyle">
        <item name="android:background">@color/colorNav</item>

    </style>
    <style name="Theme.Stmusic.BackNavigation">
        <item name="srcCompat">@drawable/ic_keyboard_backspace</item>
    </style>


    <style name="Theme.Stmusic.FragmentPlaylistConstraintTheme">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.Stmusic.PlaylistMotionTheme">
        <item name="android:background">@drawable/ic_backround</item>
    </style>

    <style name="Theme.Stmusic.AlertCreateConstraint">
        <item name="android:background">@color/black</item>
    </style>
    <style name="Theme.Stmusic.AlertCreateRecycler">
        <item name="android:background">@drawable/ic_createplaylistalertbackround</item>

    </style>
    <style name="Theme.Stmusic.PlaylistCardConstraint">
        <item name="android:background">@color/colorBack</item>

    </style>
    <style name="Theme.Stmusic.PlaylistCardTheme">
        <item name="cardBackgroundColor">@color/colorBack</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.Stmusic.PlaylistCardMoreVert">
        <item name="srcCompat">@drawable/ic_more_vertcard</item>
    </style>
    <style name="Theme.Stmusic.PlaylistArtistTheme">
        <item name="android:background">@color/black</item>
    </style>

    <style name="Theme.Stmusic.AlertCreateButton">
        <item name="android:src">@drawable/btnyesdark</item>

    </style>
    <style name="Theme.Stmusic.PlaylistArtistConstraintTheme">
        <item name="android:background">@drawable/ic_backround</item>
    </style>
    <style name="Theme.Stmusic.PlaylistArtistRecyclerTheme">
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundTint">@color/transparent</item>
    </style>
    <style name="Theme.Stmusic.Like">
        <item name="srcCompat">@drawable/favorite_1_dark</item>
    </style>
    <style name="Theme.Stmusic.CustomTextLight">
        <item name="android:textColor">@color/white</item>
    </style>






    <style name="Theme.Stmusic.MyTablayoutTheme">
        <item name="tabBackground">@color/black</item>
        <item name="tabIndicatorColor">@color/white</item>

        <item name="fontFamily">@font/chivo</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Theme.Stmusic.tabText">

        <item name="fontFamily">Chivo</item>
        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textColor">
            @color/black
        </item>

    </style>

</resources>